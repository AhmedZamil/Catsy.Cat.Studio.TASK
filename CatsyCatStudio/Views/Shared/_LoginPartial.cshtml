@using Microsoft.AspNetCore.Identity

@inject UserManager<StoreUser> UserManager
@inject SignInManager<StoreUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form method="post" asp-controller="Account" asp-action="Logout" class="navbar-right">
        <ul class="nav navbar-right navbar-nav">
            <li><a class="Manage">Hi ! @UserManager.GetUserName(User)</a></li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>

    </form>
}
else
{
    <ul class="nav navbar-right navbar-nav">
        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>

}
